						{
							"listen": "test",
							"script": {
								"exec": [
									"// בדיקת קוד סטטוס",
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"// בדיקת זמן תגובה",
									"pm.test(\"Response time is less than 2000ms\", function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(2000);",
									"});",
									"",
									"// בדיקת מבנה התגובה",
									"pm.test(\"Response has correct structure\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('user');",
									"    pm.expect(jsonData).to.have.property('token');",
									"});",
									"",
									"// בדיקת מבנה משתמש",
									"pm.test(\"User object has required fields\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.user).to.have.property('id');",
									"    pm.expect(jsonData.user).to.have.property('name');",
									"    pm.expect(jsonData.user).to.have.property('email');",
									"});",
									"",
									"// בדיקת סוגי נתונים",
									"pm.test(\"Data types are correct\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.message).to.be.a('string');",
									"    pm.expect(jsonData.token).to.be.a('string');",
									"    pm.expect(jsonData.user.id).to.be.a('string');",
									"    pm.expect(jsonData.user.name).to.be.a('string');",
									"    pm.expect(jsonData.user.email).to.be.a('string');",
									"});",
									"",
									"// בדיקת שהטוקן לא ריק",
									"pm.test(\"Token is not empty\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.token).to.not.be.empty;",
									"});",
									"",
									"// שמירת משתנים לסביבה",
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    pm.environment.set(\"user_id\", jsonData.user.id);",
									"    pm.environment.set(\"user_email\", jsonData.user.email);",
									"}"
								],
								"type": "text/javascript"
							}
						}
